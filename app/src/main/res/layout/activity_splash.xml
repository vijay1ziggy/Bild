<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDBD0"
    android:orientation="vertical"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="265dp">

        <View
            android:id="@+id/firstline"
            android:layout_width="20sp"
            android:layout_height="300sp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/secondline"
            android:layout_width="20sp"
            android:layout_height="240sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/firstline"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/thirdline"
            android:layout_width="20sp"
            android:layout_height="200sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/secondline"
            android:background="@drawable/purple_line" />

        <View
            android:id="@+id/forthline"
            android:layout_width="20sp"
            android:layout_height="150sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/thirdline"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/fifthline"
            android:layout_width="20sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/forthline"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/sixthline"
            android:layout_width="20sp"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/fifthline"
            android:background="@drawable/purple_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:fontFamily="@font/bilbo_swash_caps"
            android:text="Bild"
            android:gravity="center"
            android:layout_marginLeft="-30sp"
            android:textColor="@color/black"
            android:textSize="120sp" />
    </RelativeLayout>
</LinearLayout>